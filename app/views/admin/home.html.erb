<div class="text-center">
  <button type="button" class="btn btn-default"><%= link_to "Crear Noticia", admin_creator_path %></button>
  <div>
    <% @news.each do |aux| %>
      <div>
        <h3><%= link_to aux.title,news_path(aux) %></h3>
        <h6><%= aux.descent %></h6>
        <p>
          <%= truncate(aux.body, :length => 1000) %>
        </p>
      </div>
    <% end %>
  </div>
</div>
