<div class="text-center">
  <button type="button" class="btn btn-default"><%= link_to "Crear Noticia", new_news_path %></button>
  <div>
    <% @news.each do |aux| %>
      <div class="new-container">
        <h3><%= link_to aux.title,news_path(aux) %></h3>
        <h6><%= aux.descent %></h6>
        <p>
          <%= truncate(aux.body, :length => 1000) %>
        </p>
        <button class="btn btn-default">
          <%= link_to 'Eliminar', news_path(id: aux.id), method: :delete %>
          <i class="fa fa-trash-o"></i>
        </button>
        <button class="btn btn-default">
          <%= link_to 'Editar', edit_news_path(aux.id) %>
          <i class="fa fa-pencil"></i>
        </button>
      </div>
    <% end %>
  </div>
</div>
